.card {
  width: 90%;
  max-width: 360px;
  margin: 20rpx auto;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  position: relative;
}

.card-img {
  width: 100%;
  height: 200rpx;
}

.card-content {
  padding: 40rpx;
}

.card-title {
  font-size: 32rpx;
  margin: 0;
  color: #333;
}

.card-description {
  font-size: 24rpx;
  color: #666;
  margin: 10rpx 0;
}

.card-button {
  display: block;
  width: 100%;
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #fff;
  background-color: #007bff;
  border: none;
  border-radius: 5rpx;
  text-align: center;
}

.card-button:hover {
  background-color: #0056b3;
}